{
  "name": "powered-up",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "@powered-up/*"
  ],
  "scripts": {
    "clean": "autosrc --verbose clean",
    "pretest": "autosrc --verbose all",
    "test": "run-s test:*",
    "test:jest": "jest --no-cache --verbose",
    "test:prettier": "prettier --list-different '**/*.{js,json,md,ts,tsx,yml}'",
    "release": "lerna version --conventional-commits --sign-git-commit --sign-git-tag",
    "watch": "autosrc --verbose --watch @powered-up/demo/lib",
    "start": "DEBUG=@powered-up/* node @powered-up/demo/lib/index.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/travis-cli": "^7.1.2",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.2",
    "autosrc": "^0.12.0",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "lerna": "^3.4.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "ts-config": "^20.7.0",
    "ts-jest": "^23.10.2",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.1"
  },
  "resolutions": {
    "xpc-connection": "sandeepmistry/node-xpc-connection#pull/26/head"
  }
}
